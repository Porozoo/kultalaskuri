  const form = document.getElementById('partner-form') as HTMLFormElement | null;
  const errorDiv = document.getElementById('form-error') as HTMLDivElement | null;
  
  if (form) {
    form.addEventListener('submit', async (e: SubmitEvent) => {
      e.preventDefault();
      if (errorDiv) errorDiv.classList.add('hidden');
      
      const formElement = e.target as HTMLFormElement;
      const formData = new FormData(formElement);
      
      // Honeypot check
      const honeypot = formData.get('website') as string | null;
      if (honeypot && honeypot.length > 0) {
        console.log('Bot detected');
        return;
      }
      
      const payload = {
        company: formData.get('company') as string,
        contact: formData.get('contact') as string,
        email: formData.get('email') as string,
        phone: formData.get('phone') as string || null,
        city: formData.get('city-interest') as string,
        message: `Kiinnostunut kaupungeista: ${formData.get('city-interest')}`
      };

