  <script>
    function debounce<T extends (...args: unknown[]) => void>(
      fn: T,
      ms = 150
    ): (...args: Parameters<T>) => void {
      let timer: ReturnType<typeof setTimeout>;
      return (...args) => {
        clearTimeout(timer);
        timer = setTimeout(() => fn(...args), ms);
      };
    }

    // FAQ: synkronoi details-elementtien tila ikkunan koon muuttuessa
    function syncDetailsState(): void {
      const isDesktop = window.matchMedia('(min-width: 768px)').matches;
      document.querySelectorAll('#ukk details').forEach(d => {
        d.toggleAttribute('open', isDesktop);
      });
    }

    window.addEventListener('resize', debounce(syncDetailsState));

    // Scroll-to-top
    const scrollBtn = document.getElementById('scroll-to-top');

    function handleScroll(): void {
      if (window.scrollY > 300) {
        scrollBtn?.classList.remove('opacity-0', 'translate-y-10', 'pointer-events-none');
      } else {
        scrollBtn?.classList.add('opacity-0', 'translate-y-10', 'pointer-events-none');
      }
    }

    window.addEventListener('scroll', debounce(handleScroll, 50));
    scrollBtn?.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });

    // Reveal-animaatiot
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) entry.target.classList.add('active');
      });
    });
    document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
  </script>

