---
import { formatEur } from '../lib/utils/formatters';

interface Props {
  karat: string;
  purity: number;
  label: string;
  price: number;
  isHighlighted?: boolean;
}

const { karat, purity, label, price, isHighlighted = false } = Astro.props;

const weights = [1, 5, 10, 50];
---

<div class={`
  bg-white rounded-[2rem] p-6 shadow-sm border transition-all duration-300 
  relative overflow-hidden group
  ${isHighlighted 
    ? 'border-gold-400 hover:shadow-xl hover:shadow-gold-500/10' 
    : 'border-gray-100 hover:border-gold-300 hover:shadow-md'
  }
`}>
  <div class="flex items-center justify-between mb-6 relative z-10">
    <div>
      <h3 class="text-3xl font-black text-gray-900 tracking-tight">{karat}</h3>
      <span class="text-xs font-bold text-gold-600 uppercase tracking-wider">
        {label}
      </span>
    </div>
    <div class="w-12 h-12 rounded-full bg-gold-50 flex items-center justify-center 
      text-gold-600 font-black text-lg border border-gold-100 shadow-sm 
      transition-transform duration-300 group-hover:scale-110">
      {purity}
    </div>
  </div>
  
  <div class="space-y-4 relative z-10">
    {weights.map((w, i) => (
      <div class={`flex justify-between items-center ${
        i < weights.length - 1 ? 'pb-3 border-b border-gray-100' : 'pt-1'
      }`}>
        <span class="text-gray-500 font-medium">
          {w} gramma{w > 1 ? 'a' : ''}
        </span>
        <span class={`tabular-nums text-gray-900 ${
          i === weights.length - 1 
            ? 'text-2xl font-black tracking-tight' 
            : 'text-lg font-bold'
        }`}>
          {formatEur(price * w)} â‚¬
        </span>
      </div>
    ))}
  </div>
</div>