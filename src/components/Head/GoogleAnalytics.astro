---
// src/components/Head/GoogleAnalytics.astro

// Vaihda oma Measurement ID tähän (löytyy GA4:sta)
const GA_ID = import.meta.env.PUBLIC_GA_ID || 'G-XXXXXXXXXX';


const isProd = import.meta.env.PROD;
---

{isProd && (
  <>
    <!-- Google Analytics 4 -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>
    <script is:inline define:vars={{ GA_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_ID, {
        // Parannetut asetukset
        anonymize_ip: true,           // GDPR-ystävällinen
        cookie_flags: 'SameSite=None;Secure'
      });
    </script>
  </>
)}